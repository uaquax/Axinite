@model List<FilmEntity>

@{
    ViewData["Title"] = "Home Page";
}

<div>
    <table>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th></th>
        </tr>
        @foreach(var film in Model){
            <tr>
                <td>@film.Title</td>
                <td>@film.Description</td>
                <td>@Html.ActionLink("Download", "Download", new { path = film.Path })</td>
            </tr>
        }
    </table>
</div>
